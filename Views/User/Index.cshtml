

<div class="container m-2">
	<div class="row justify-content-center">
		<div class="col-10 text-end">
			<button class="btn-add-user btn btn-success" onclick="showUpsertDialog('Add', addUser)"
				data-bs-toggle="modal" data-bs-target="#upsertModal">Add new user</button>
		</div>

		<div class="m-4 col-10">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th width="65%">Name</th>
						<th width="20%">Age</th>
						<th width="15%"></th>
					</tr>
				</thead>

				<tbody class="table-body"></tbody>
			</table>
		</div>
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="upsertModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="upsertModalLabel">Modal title</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div>
					<label>
						Name:
					</label>
					<input class="form-control" id="name-input" />
				</div>

				<div>
					<label>
						Age:
					</label>
					<input class="form-control" id="age-input" />
				</div>
			</div>
			<div class="modal-footer">
				<p class="text-danger fw-lighter col-8" style="visibility: hidden" id="validationText">Validation</p>
				<button type="button" class="btn btn-secondary" id="btn-close-modal" data-bs-dismiss="modal" onclick="hideValidationText()">Close</button>
				<button class="btn btn-success" id="btn-upsert">Add</button>
			</div>
		</div>
	</div>
</div>

<link rel="stylesheet" href="~/css/user-style.css"/>
<script src="~/js/user-index.js"></script>
